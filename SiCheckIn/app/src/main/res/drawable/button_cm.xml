<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <corners android:radius="3dp"></corners>
            <solid android:color="@color/fullTransparent"></solid>
            <stroke android:color="@color/btnBorder" android:width="1dp"></stroke>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="3dp"></corners>
            <solid android:color="@color/btnPressed"></solid>
            <stroke android:color="@color/btnBorderPressed" android:width="1dp"></stroke>
        </shape>
    </item>
</selector>